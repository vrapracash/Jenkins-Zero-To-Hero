pipeline {
  agent {
    docker { image 'node:16-alpine' }
  }
  stages {
    stage('Test') {
      steps {
        sh 'node --version'
      }
    }
    stage('Deploy') {
      steps {
        sh 'node --version'
      }
    }
  stage('Results') {
      steps {
        sh 'node --version'
      }
    }
    success{
      mail to: 'veera.bangla@gmail.com',
        subject: 'Pipeline Succeeded',
        body: 'Your Jenkins pipe line is completed successfully.'
    }
    failure{
      mail to: 'veera.bangla@gmail.com',
        subject: 'Pipeline Failed',
        body: 'Your Jenkins pipe line has failed, Please investigate.'
    }
  }
}
