pipeline {
  agent {
    docker { image 'node:16-alpine' }
  }
  stages {
    stage('Test') {
      steps {
        sh 'node --version'
      }
    }
  stage('Deploy') {
      steps {
        sh 'kubectl apply -f deployment.yml'
      }
    }
  stage('Results') {
      steps {
        sh 'node --version'
      }
    }
  }
}
